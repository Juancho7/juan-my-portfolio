---
import projects from '../data/projects.js';
import skills from '../data/skills.js';
---

<section class='my-10'>
  <div>
    <h2 class='text-xl font-semibold'>Projects</h2>
    <div class='mt-2 grid sm:grid-cols-2 md:grid-cols-3 gap-1 md:gap-2'>
      {
        projects.map((project) => (
          <div class='h-64 text-gray-200 bg-gray-800 rounded-md hover:shadow-lg hover:shadow-gray-500 hover:scale-105 overflow-hidden duration-100'>
            <a
              href={project.repository}
              target='_blank'
              class='block h-full w-full'
            >
              <img
                src={
                  project.img === '' ? './default_screenshot.PNG' : project.img
                }
                alt={project.img}
                class='h-4/6 sm:h-2/4 md:h-3/4 w-full object-cover'
              />
              <div class='my-2 mx-2'>
                <p class='mb-1 font-semibold'>{project.projectTitle}</p>
                <div class='flex flex-col gap-y-2 md:flex-row md:items-center md:gap-x-2'>
                  <h3 class='font-semibold'>Technologies:</h3>
                  <ul class='flex flex-wrap gap-1 md:gap-x-2'>
                    {project.technologies.map((technology) => {
                      const skill = skills.find(
                        (skill) => skill.skillName === technology
                      );
                      return (
                        <li>
                          <img
                            src={skill ? skill.logo : './regex_icon.svg'}
                            alt={technology}
                            class='w-8'
                          />
                        </li>
                      );
                    })}
                  </ul>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
