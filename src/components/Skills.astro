  {
    skillName: 'Notion',
    logo: './notion_icon.svg',
    colors: 'text-neutral-800 bg-neutral-100',
  },
];
---

<section class='my-5'>
  <h2 class='text-xl font-semibold'>Skills</h2>
  <ul class='mt-4 flex flex-wrap gap-2'>
    {
      skills.map((skill) => (
        <li>
          <Skill
            skillName={skill.skillName}
            logo={skill.logo}
            colors={skill.colors}
          />
        </li>
      ))
    }
  </ul>
</section>
